.container
  .row
    %h1
      Automatically import current 42 cursus cadets
  %br
  .row
    = form_for :cadet, :url => {:controller => 'cadet', :action => 'import_cadets_fremont'} do |f|      
      
      .it-hidden{style: "display: none;"}
        %img(src="https://upload.wikimedia.org/wikipedia/commons/b/b1/Loading_icon.gif")
      .row
        = submit_tag :import, class: "btn btn-primary",  onclick: "$('.it-hidden').show()"
        = label_tag :cadet_name, "This will take a while (5-10 minutes) please be patient...", style: "font-weight: bold; margin-left: 5px;"


  %br
  %br
  %br
  .row
    %h1
      Manually add a cadet to the datastore
  %br
  .row
    = form_for :cadet, :url => {:controller => 'cadet', :action => 'create'} do |f|      
      = label_tag :cadet_piscine, "Pisciner?"
      .input-group
        = f.select(:piscine, ["yes", "no"], class: "form-control")

      %br
      = label_tag :cadet_name, "Full Name"
      .input-group
        = text_field_tag :name, "", placeholder: "Xavier Niel", class: "form-control"

      %br
      = label_tag :cadet_login, "Login"
      .input-group
        = text_field_tag :login, "", placeholder: "xniel", class: "form-control"

      %br
      = submit_tag :submit, class: "btn btn-primary"

